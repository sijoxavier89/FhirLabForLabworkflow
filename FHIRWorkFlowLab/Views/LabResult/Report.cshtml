@model FHIRWorkFlowLab.Models.LabResult.LabResultViewModel
@{
    ViewBag.Title = "Report";
}


<div class="py-5">
    <h2 style="text-align:left">LAB RESULT</h2>
    @using (Html.BeginForm("SendReport", "LabResult", FormMethod.Post))
    {
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Patient-ID</label>
                    @Html.TextBoxFor(Model => Model.PatientId, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Name</label>
                    @Html.TextBoxFor(Model => Model.PatientName, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Status</label>
                    @Html.DropDownListFor(Model => Model.Status, new List<SelectListItem> { new SelectListItem{Text= "Registered", Value= "registered" }, new SelectListItem{Text= "Preliminary", Value= "preliminary" }, new SelectListItem { Text = "Final ", Value = "final " }},new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Performer</label>
                    @Html.TextBoxFor(Model => Model.Performer, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Category</label>
                    @Html.TextBoxFor(Model => Model.Category, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Glucose Level</label>
                    @Html.TextBoxFor(Model => Model.ResultGlucoseLevel, new { @class = "form-control" })  
                </div>
                <div class="form-group col-md-2">
                    <label class="font-weight-bold">Units</label>
                    <span class="input-group-text">Moles/volume</span> 
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Intrepretation</label>
                    @Html.TextBoxFor(Model => Model.Interpretation, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Date</label>
                    @Html.TextBoxFor(Model => Model.IssuedDate ,new { placeholder = "YYYY-MM-DD" ,@class = "form-control" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Send Result</button>
            <a href="/LabList/List" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Back</a>
            @Html.HiddenFor(Model => Model.ProcedureId);
        </form>
    }
</div>
