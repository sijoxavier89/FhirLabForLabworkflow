@model FHIRWorkFlowLab.Models.RegisterPatient.RegisterPatientViewModel
@{
    ViewBag.Title = "PatientRegister";
}

<div class="py-5">
    <h2 style="text-align:center">PATIENT REGISTRATION FORM</h2>
    @using (Html.BeginForm("GeneratePatientResource", "RegisterPatient", FormMethod.Post))
    {
        <form>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label>MRN</label>
                    @Html.TextBoxFor(m => m.PatientMRN, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-2">
                    <label>Prefix</label>
                   @Html.DropDownListFor(m => m.Prefix , new List<SelectListItem> { new SelectListItem { Text = "Mr" , Value = "Mr"},
                                                                                  { new SelectListItem { Text = "Mrs" , Value = "Mrs"}},                     },
                                                                                  new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.PatientFirstname, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4">
                    <label>FamilyName</label>
                    @Html.TextBoxFor(m => m.Familyname, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>Gender</label>
                    @Html.DropDownListFor(m => m.gender, new List<SelectListItem> { new SelectListItem { Text = "M" , Value = "M"},
                                                                                    new SelectListItem { Text = "F" , Value = "F"},
                                                                                    new SelectListItem { Text = "T" , Value = "T"}},                   
                                                                                    new { @class = "form-control" })
                </div>
                <div class="form-group col-md-3">
                    <label>Date-Of-Birth</label>
                   @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", placeholder = "YYYY-MM-DD" })
                </div>
                <div class="form-group col-md-3">
                    <label>MaritalStatus</label>
                    @Html.DropDownListFor(m => m.MaritalStatus, new List<SelectListItem> { new SelectListItem { Text = "M" , Value = "M"},
                                                                                           new SelectListItem { Text = "S" , Value = "S"}},
                                                                                           new { @class = "form-control" })
                </div>
                <div class="form-group col-md-3">
                    <label>Telecom</label>
                    @Html.TextBoxFor(m => m.TelecomDetails, new { @class = "form-control", @maxlength = 10 })
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Address</label>
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>City</label>
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" }) 
                </div>
                <div class="form-group col-md-3">
                    <label>State</label>
                    @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-3">
                    <label>Country</label>
                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-3">
                    <label>Zip</label>
                    @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
</div>



