@model FHIRWorkFlowLab.Models.LabResult.LabResultViewModel

@{
    ViewBag.Title = "ShowResult";
}

<div class="py-5">
    <h2 style="text-align:left">OBSERVATION RESULT</h2>
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Patient-ID</label>
                    @Html.TextBoxFor(Model => Model.PatientId, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Status</label>
                    @Html.TextBoxFor(Model => Model.Status, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Category</label>
                    @Html.TextBoxFor(Model => Model.Category, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Date</label>
                    @Html.TextBoxFor(Model => Model.IssuedDate, new { placeholder = "YYYY-MM-DD", @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="font-weight-bold">Glucose Level</label>
                    @Html.TextBoxFor(Model => Model.ResultGlucoseLevel, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-2">
                    <label class="font-weight-bold">Units</label>
                    <span class="input-group-text">Moles/volume</span>
                </div>
            </div>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#exampleModalScrollable">View Raw Json</button>
            <a href="/LabList/List" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Back</a>
       </form>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">Json View</h5>
            </div>
            <div class="modal-body">
                <pre>@Model.FhirResource</pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

